extends layout

block content
    .w3-container.w3-theme-l1
        h1.w3-theme Events List
        a.w3-button.w3-theme-d3.w3-card.w3-right(id="create_event_modal" style="width:auto;") Create Event
        br
        br
        ul.w3-ul.w3-card-4
            each e in events
                li.w3-bar
                    .w3-bar-item.w3-theme.w3-large.w3-right
                        button.edit.w3-button(id=""+e._id) &#9881;
                        a.w3-button(href='http://localhost:8000/admin/event/remove/' + e._id) &#9760;
                    
                    b.w3-bar-item.w3-hide-small(id="Hauthor"+e._id, style="width:10%")= e.theme    
                    
                    .w3-bar-item(style="width:60%")
                        b= e.local
                        br
                        p(id="Hdate"+e._id).w3-small= e.description 
                        br
                        p= "Interested: "
                            each i in e.interested
                                span= i + "; "                            

                    .w3-bar-item(style="width:20%")
                        each t in e.timetable
                            span= "Date:" t.date + " " + t.hour 
                            br
                            span= "Duration: "+t.duration+"Min"
                            br

    //- Register TAB Form
    .w3-modal(id="newEventForm")
      form.w3-modal-content.w3-card-4.w3-animate-zoom
        span.w3-display-topright.w3-button(id="close_modal") &times;
        .w3-container.w3-padding-16
            label
                b Local
            input(type='text', placeholder="Enter Title", id="title" ,required, style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;")
            label
                b Theme
            input(type='text', placeholder="Enter Author", id="author", required, style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;")
            label
                b Description
            input(type='date', placeholder="First and Last Name", id="date" ,required, style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;")
            label
                b Time Table
            .w3-container
                span.w3-display-topright.w3-button(id="add_time")= "+"
                     
            br
            button.w3-button.w3-theme-d5(id="newEventButton") Add Article
            button.w3-button.w3-theme-d5(id="updateEventButton") Update Article      

  script(src='/javascripts/Admin/events.js')