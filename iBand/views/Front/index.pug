extends layout

block content
  br
  .w3-cell-row
    .w3-container.w3-cell.w3-card-4.w3-hide-small(style="width:20%")
      br
      b(id="emailUser", style="text-align:center")= user.email
      hr
      p Welcome to the user front page, you can select multiple options as
        if(user.utype==2)
          span= " Consumer."
        else
          if(user.utype==1)
            span= " Producer."
          else 
            span= " Admin."
      hr
      a.w3-button(href="http://localhost:8000/user/settings/"+user._id) Settings
      if(user.utype==0)
        br
        a.w3-button(href="http://localhost:8000/admin"+user._id) Admin View

    .w3-container.w3-cell
      h3 News
      ul.w3-ul.w3-card-4(id="newsList")
      hr
      h3 Events
      ul.w3-ul.w3-card-4(id="eventsList")
    
  //- Footer
  br
  .w3-container.w3-theme-d5
    footer.w3-center.w3-padding-16
      p Powered by Group ?? For PRI

    script(src='/javascripts/User/home.js')