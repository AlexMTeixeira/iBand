extends layout

block content
    .w3-container.w3-theme-l1
        h1.w3-theme Musical Works List
        a.w3-button.w3-theme-d3.w3-card.w3-right(id="create_work_modal" style="width:auto;") Create Musical Work
        br
        br
        ul.w3-ul.w3-card-4

            li.w3-bar.w3-teal
                .w3-col.l2.s2.m2 Title
                .w3-col.l2.s2.m2 Composer
                .w3-col.l2.s2.m2 Type
                .w3-col.l2.s2.m2 Arrangement
                .w3-col.l3.s3.m3 ID
                .w3-col.l1.s1.m1.w3-right Actions


            each w in works
                li.w3-bar
                    .w3-col.l2 
                        b(id="Htitulo"+w._id)= w.title
                    .w3-col.l2
                        if w.composer
                            p(id="Hcompositor"+w._id).w3-small= w.composer
                        else
                            p -------
                    .w3-col.l2
                        b.w3-hide-small(id="Htipo"+w._id)= w.type    
                    .w3-col.l2
                        if w.arrangement
                            p(id="Harranjo"+w._id)= w.arrangement
                        else
                            p -------
                    .w3-col.l3
                        p.w3-tiny= "ID: "+w._id
                    
                    .w3-col.l1    
                        .w3-large.w3-right
                            a.w3-button(href='http://localhost:8000/admin/works/remove/' + w._id) &#9760;


    //- Register TAB Form
    .w3-modal(id="newArticleForm")
      form.w3-modal-content.w3-card-4.w3-animate-zoom
        span.w3-display-topright.w3-button(id="close_modal") &times;
        .w3-container.w3-padding-16
            label(id="idField")
                b= "ID: "
                span(id="_field")
            br
            label
                b Title
            input(type='text', placeholder="Enter Title", id="title" ,required, style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;")
            label
                b Author
            input(type='text', placeholder="Enter Author", id="author", required, style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;")
            label
                b Date
            input(type='date', placeholder="First and Last Name", id="date" ,required, style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;")
            label
                b Content
            input(type='text', placeholder="Text Content", id="content" ,required, style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;")
            br
            button.w3-button.w3-theme-d5(id="newArticleButton") Add Article
            button.w3-button.w3-theme-d5(id="updateArticleButton") Update Article      

    script(src='/javascripts/Admin/works.js')